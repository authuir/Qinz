<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <!-- 顶部选项栏 -->
            <FrameLayout
                android:layout_alignParentTop="true"
                android:layout_width="1dp"
                android:layout_height="48dp"
                android:background="#24D5A7">
            </FrameLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="250dp"
                android:scaleType="fitXY"
                android:src="@drawable/activitypic1"/>

            <LinearLayout
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="爱心排行榜"
                    android:textSize="24dp"
                    android:textColor="@color/textqml"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_horizontal"/>
                <FrameLayout
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/main_hot_head1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="100dp"
                        android:text="阿狸"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textqml"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="130dp"
                        android:text="201分"/>
                    <FrameLayout
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="100dp"
                        android:background="@color/textqml"/>
                    <FrameLayout
                        android:layout_width="150dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="170dp"
                        android:background="#ededed"/>

                </FrameLayout>
                <FrameLayout
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/main_hot_head2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="100dp"
                        android:text="阿狸"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textqml"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="130dp"
                        android:text="201分"/>
                    <FrameLayout
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="100dp"
                        android:background="@color/textqml"/>
                    <FrameLayout
                        android:layout_width="150dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="170dp"
                        android:background="#ededed"/>

                </FrameLayout>
                <FrameLayout
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/main_hot_head3"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="100dp"
                        android:text="阿狸"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textqml"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="130dp"
                        android:text="201分"/>
                    <FrameLayout
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="100dp"
                        android:background="@color/textqml"/>
                    <FrameLayout
                        android:layout_width="150dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="170dp"
                        android:background="#ededed"/>

                </FrameLayout>

            </LinearLayout>

            <!-- 底部操作栏 -->
            <LinearLayout
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:layout_marginTop="2dp">
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- 顶部选项栏 -->
    <FrameLayout
        android:layout_alignParentTop="true"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="#24D5A7">
        <ImageView
            android:onClick="onClick_Back"
            android:id="@+id/main_menuicon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/main_top6"
            android:layout_marginLeft="16dp"
            android:layout_gravity="left|center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:text="爱心义卖募捐"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:src="@drawable/main_top2"
            android:layout_gravity="right|center"
            android:layout_marginRight="16dp"
            />
    </FrameLayout>

    <!-- 底部操作栏 -->
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="2dp"
        android:background="#FFFFFF">
        <FrameLayout
            android:onClick="onClick_Buy"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:background="#4FAFD9">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:text="我要卖"/>
        </FrameLayout>
        <FrameLayout
            android:onClick="onClick_Sell"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:background="#21D7A7">
            <TextView
                android:id="@+id/main_detail_buy"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:text="我要买"/>
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>