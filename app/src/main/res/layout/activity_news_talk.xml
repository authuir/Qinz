<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <!-- 顶部选项栏 -->
            <FrameLayout
                android:layout_alignParentTop="true"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:background="#24D5A7">
            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="70dp">
                <ImageView
                    android:onClick="onClick_FridMain"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/main_hot_head1"/>
                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="90dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/talk_left"
                    />
                <FrameLayout
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="110dp"
                    android:layout_width="140dp"
                    android:layout_height="50dp">
                    <TextView
                        android:textColor="#000000"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="学长在吗"/>
                </FrameLayout>


            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="70dp">
                <ImageView
                    android:onClick="onClick_FridMain"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/main_hot_head1"/>
                <ImageView

                    android:layout_width="170dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="90dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/talk_left"
                    />
                <FrameLayout
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="110dp"
                    android:layout_width="140dp"
                    android:layout_height="50dp">
                    <TextView
                        android:textColor="#000000"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="约吗"/>
                </FrameLayout>


            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="70dp">
                <ImageView
                    android:onClick="onClick_PersMain"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/main_head1"/>
                <ImageView

                    android:layout_width="170dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:layout_marginRight="90dp"
                    android:layout_gravity="center_vertical|right"
                    android:src="@drawable/talk_right"
                    />
                <FrameLayout
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="110dp"
                    android:layout_width="140dp"
                    android:layout_height="50dp">
                    <TextView
                        android:textColor="#000000"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="约约约"/>
                </FrameLayout>


            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="70dp">
                <ImageView
                    android:onClick="onClick_PersMain"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/main_head1"/>
                <ImageView

                    android:layout_width="170dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:layout_marginRight="90dp"
                    android:layout_gravity="center_vertical|right"
                    android:src="@drawable/talk_right"
                    />
                <FrameLayout
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="110dp"
                    android:layout_width="140dp"
                    android:layout_height="50dp">
                    <TextView
                        android:textColor="#000000"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="今晚来我的房间，天马大酒店420"/>
                </FrameLayout>

            </FrameLayout>

            <ListView
                android:id="@+id/lv"
                android:cacheColorHint="#000000"
                android:layout_width="fill_parent"
                android:layout_height="400dp" />

            <!-- 底部操作栏 -->
            <LinearLayout
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:background="#FFFFFF">
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- 顶部选项栏 -->
    <FrameLayout
        android:layout_alignParentTop="true"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="#24D5A7">
        <ImageView
            android:onClick="onClickBack"
            android:id="@+id/main_menuicon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/main_top6"
            android:layout_marginLeft="16dp"
            android:layout_gravity="left|center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:text="阿狸"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:src="@drawable/main_top2"
            android:layout_gravity="right|center"
            android:layout_marginRight="16dp"
            />
    </FrameLayout>

    <!-- 底部操作栏 -->
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="2dp"
        android:background="#FFFFFF">
        <ImageView
            android:layout_width="32dp"
            android:layout_height="25dp"
            android:src="@drawable/keyboard"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="left|center"/>
        <FrameLayout
            android:layout_width="250dp"
            android:background="#cfcfcf"
            android:layout_gravity="center_vertical"
            android:layout_height="40dp">
            <EditText
                android:id="@+id/msg"
                android:textSize="16dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="240dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:singleLine="true"
                android:background="@null"
                />
        </FrameLayout>
        <FrameLayout
            android:onClick="onClick_SendMSG"
            android:layout_width="60dp"
            android:layout_gravity="center_vertical"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/main_detail_buy"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="#646464"
                android:text="发送"/>
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>
