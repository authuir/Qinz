            android:layout_height="60dp"
            android:background="#F5F5F5">
            <ImageView
                android:id="@+id/main_hot_left"
                android:layout_width="100dp"
                android:layout_height="36dp"
                android:src="@drawable/main_hot_leftfocus"
                android:layout_marginLeft="80dp"
                android:scaleType="centerCrop"
                android:layout_gravity="left|center"/>
            <ImageView
                android:id="@+id/main_hot_right"
                android:layout_width="100dp"
                android:layout_height="36dp"
                android:src="@drawable/main_hot_rightunfocus"
                android:layout_marginRight="80dp"
                android:scaleType="centerCrop"
                android:layout_gravity="right|center"/>
            <TextView
                android:id="@+id/main_hottext_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textqml"
                android:textSize="14dp"
                android:layout_gravity="left|center"
                android:layout_marginLeft="106dp"
                android:text="热门商品"/>
            <TextView
                android:id="@+id/main_hottext_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textgray"
                android:textSize="14dp"
                android:layout_gravity="right|center"
                android:layout_marginRight="106dp"
                android:text="求购求租"/>
        </FrameLayout>

        <LinearLayout
