                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="大三"
                    android:textColor="@color/textgray"/>
