                    android:textColor="@color/textgray"/>
            </LinearLayout>
        </LinearLayout>

        <TabWidget
            android:id="@android:id/tabs"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp">
        </TabWidget>

        <FrameLayout android:id="@android:id/tabcontent"
