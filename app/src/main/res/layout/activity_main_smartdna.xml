<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="#24D5A7">
        <ImageView
            android:id="@+id/main_menuicon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/main_top6"
            android:layout_marginLeft="16dp"
            android:layout_gravity="left|center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="22dp"
            android:layout_gravity="center"
            android:text="智能DNA"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:src="@drawable/main_top2"
            android:layout_gravity="right|center"
            android:layout_marginRight="16dp"
            />
    </FrameLayout>
    <!-- 广场icon栏 -->
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="470dp"
        android:background="#EFEFEF">
        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:columnCount = "3"
            android:rowCount="4">
            <FrameLayout style="@style/MainFrame3">
                <ImageView
                    android:id="@+id/main_music"
                    style="@style/MainIcon2"
                    android:src="@drawable/main_music"/>
            </FrameLayout>
            <FrameLayout style="@style/MainFrame3">
                <ImageView
                    android:id="@+id/main_movie"
                    style="@style/MainIcon2"
                    android:src="@drawable/main_movie"/>
            </FrameLayout>
            <FrameLayout style="@style/MainFrame3">
                <ImageView
                    android:id="@+id/main_draw"
                    style="@style/MainIcon2"
                    android:src="@drawable/main_draw"/>
            </FrameLayout>
            <FrameLayout style="@style/MainFrame3">
                <ImageView
                    android:id="@+id/main_barbecue"
                    style="@style/MainIcon2"
                    android:src="@drawable/main_barbecue"/>
            </FrameLayout>
            <FrameLayout style="@style/MainFrame3">
                <ImageView
                    android:id="@+id/main_travel"
                    style="@style/MainIcon2"
                    android:src="@drawable/main_travel"/>
            </FrameLayout>
            <FrameLayout style="@style/MainFrame3">
                <ImageView
                    android:id="@+id/main_gathering"
                    style="@style/MainIcon2"
                    android:src="@drawable/main_gathering"/>
            </FrameLayout>
            <FrameLayout style="@style/MainFrame3">
                <ImageView
                    android:id="@+id/main_technology"
                    style="@style/MainIcon2"
                    android:src="@drawable/main_technology"/>
            </FrameLayout>
            <FrameLayout style="@style/MainFrame3">
                <ImageView
                    android:id="@+id/main_handmade"
                    style="@style/MainIcon2"
                    android:src="@drawable/main_handmade"/>
            </FrameLayout>
            <FrameLayout style="@style/MainFrame3">
                <ImageView
                    android:id="@+id/main_study"
                    style="@style/MainIcon2"
                    android:src="@drawable/main_study"/>
            </FrameLayout>
            <FrameLayout style="@style/MainFrame3">
                <ImageView
                    android:id="@+id/main_fitness"
                    style="@style/MainIcon2"
                    android:src="@drawable/main_fitness"/>
            </FrameLayout>
            <FrameLayout style="@style/MainFrame3">
                <ImageView
                    android:id="@+id/main_cook"
                    style="@style/MainIcon2"
                    android:src="@drawable/main_cook"/>
            </FrameLayout>
            <FrameLayout style="@style/MainFrame3">
                <ImageView
                    android:id="@+id/main_read"
                    style="@style/MainIcon2"
                    android:src="@drawable/main_read"/>
            </FrameLayout>
        </GridLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_marginTop="38dp"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#21D7A7">
        <TextView
            android:id="@+id/main_detail_buy"
            android:layout_width="54dp"
            android:layout_height="33dp"
            android:layout_gravity="center_horizontal"
            android:textSize="25dp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"
            android:text="确认"/>
    </FrameLayout>


</LinearLayout>