<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical">

    <LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EFEFEF"
        tools:context=".MainActivity">

        <!-- 顶部选项栏 -->
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="#24D5A7">
            <ImageView
                android:onClick="onClick_Back"
                android:id="@+id/main_menuicon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/main_top6"
                android:layout_marginLeft="16dp"
                android:layout_gravity="left|center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:text="确认宝贝"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="22dp"
                android:src="@drawable/main_top2"
                android:layout_gravity="right|center"
                android:layout_marginRight="16dp"
                />
        </FrameLayout>

        <!-- 宝贝详情 -->
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#FFFFFF">
            <ImageView
                android:scaleType="centerCrop"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:src="@drawable/booklist1"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="8dp"
                android:textSize="12dp"
                android:text="YAYAI KUSAMA"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="32dp"
                android:textSize="12dp"
                android:text="金额:"/>
            <TextView
                style="@style/MainColor"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="32dp"
                android:textSize="12dp"
                android:text="12RMB"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="32dp"
                android:textSize="12dp"
                android:text="积分:"/>
            <TextView
                style="@style/MainColor"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="32dp"
                android:textSize="12dp"
                android:text="120"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="50dp"
                android:textSize="12dp"
                android:text="任务交易:"/>
            <TextView
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="50dp"
                android:textSize="10dp"
                android:text="希望有朋友教教我绘画、水彩或者水份都行。只要你有空的时候教教我就行。"/>
        </FrameLayout>

        <!-- 交易方式 -->
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#FFFFFF"
            android:layout_marginTop="5dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <RadioButton
                    android:layout_width="118dp"
                    android:layout_height="40dp"
                    android:text="金额交易"/>
                <ImageView
                    android:layout_width="3dp"
                    android:layout_height="fill_parent"
                    android:src="@drawable/main_split"/>
                <RadioButton
                    android:layout_width="118dp"
                    android:layout_height="40dp"
                    android:text="积分交易"/>
                <ImageView
                    android:layout_width="3dp"
                    android:layout_height="fill_parent"
                    android:src="@drawable/main_split"/>
                <RadioButton
                    android:layout_width="118dp"
                    android:layout_height="40dp"
                    android:text="当面支付"/>
            </LinearLayout>

        </FrameLayout>

        <!-- 交易时间 -->
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#FFFFFF"
            android:layout_marginTop="5dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center|left"
                    android:textColor="#000000"
                    android:text="交易时间"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="18dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center|left"
                    android:textColor="#000000"
                    android:text="周一，12:00"/>
            </LinearLayout>

        </FrameLayout>

        <!-- 交易地点 -->
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#FFFFFF"
            android:layout_marginTop="5dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center|left"
                    android:textColor="#000000"
                    android:text="交易地点"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="18dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center|left"
                    android:textColor="#000000"
                    android:text="湖南大学天马学生公寓"/>
            </LinearLayout>

        </FrameLayout>

        <!-- 交易方式 -->
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#FFFFFF"
            android:layout_marginTop="5dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center|left"
                    android:textColor="#000000"
                    android:text="支付方式"/>
                <ImageView
                    android:layout_width="3dp"
                    android:layout_height="fill_parent"
                    android:src="@drawable/main_split"/>
                <RadioButton
                    android:layout_width="118dp"
                    android:layout_height="40dp"
                    android:text="在线支付"/>
                <ImageView
                    android:layout_width="3dp"
                    android:layout_height="fill_parent"
                    android:src="@drawable/main_split"/>
                <RadioButton
                    android:layout_width="118dp"
                    android:layout_height="40dp"
                    android:text="当面支付"/>
            </LinearLayout>

        </FrameLayout>

        <!-- 推荐的书 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:background="#FFFFFF"
            android:layout_width="fill_parent"
            android:layout_height="180dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="118dp"
                android:layout_marginTop="3dp"
                android:layout_height="fill_parent">
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="90dp"
                    android:layout_marginRight="3dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/booklist3"/>
                <TextView
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:textSize="14dp"
                    android:text="谢谢你"
                    android:layout_width="fill_parent"
                    android:layout_height="16dp" />
                <TextView
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="3dp"
                    android:textColor="#FF1DD199"
                    android:textSize="12dp"
                    android:text="12RMB"
                    android:layout_width="fill_parent"
                    android:layout_height="14dp" />
                <ImageView
                    android:src="@drawable/additemicon"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="118dp"
                android:layout_marginRight="3dp"
                android:layout_height="fill_parent">
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="3dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/booklist2"/>
                <TextView
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:textSize="14dp"
                    android:text="身价四亿的鲨鱼"
                    android:layout_width="fill_parent"
                    android:layout_height="16dp" />
                <TextView
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="3dp"
                    android:textColor="#FF1DD199"
                    android:textSize="12dp"
                    android:text="12RMB"
                    android:layout_width="fill_parent"
                    android:layout_height="14dp" />
                <ImageView
                    android:src="@drawable/additemicon"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="118dp"
                android:layout_height="fill_parent">
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="3dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/booklist4"/>
                <TextView
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:textSize="14dp"
                    android:text="十一"
                    android:layout_width="fill_parent"
                    android:layout_height="16dp" />
                <TextView
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="3dp"
                    android:textColor="#FF1DD199"
                    android:textSize="12dp"
                    android:text="12RMB"
                    android:layout_width="fill_parent"
                    android:layout_height="14dp" />
                <ImageView
                    android:src="@drawable/additemicon"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- 推荐的书 -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:background="#FFFFFF"
            android:layout_width="fill_parent"
            android:layout_height="50dp">
            <TextView
                android:text="     “以上为配套书单及教具请仔细查阅是否有需要购买”"
                android:layout_height="20dp"
                android:layout_width="fill_parent"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <!-- 买买买 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginTop="2dp"
            android:background="#FFFFFF">
            <ImageView
                android:onClick="onClick_Talk"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/main_talk_icon"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="left|center"/>
            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:background="#21D7A7">
                <TextView
                    android:id="@+id/main_detail_buy"
                    android:layout_width="40dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:textColor="#FFFFFF"
                    android:text="确认"/>
            </FrameLayout>
        </LinearLayout>



    </LinearLayout>

</ScrollView>