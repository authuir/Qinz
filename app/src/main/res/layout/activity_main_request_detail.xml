<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical">

    <LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EFEFEF"
        tools:context=".MainActivity">

        <!-- 顶部选项栏 -->
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="#24D5A7">
            <ImageView
                android:id="@+id/main_menuicon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/main_top6"
                android:layout_marginLeft="16dp"
                android:layout_gravity="left|center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:text="工业设计史"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="22dp"
                android:src="@drawable/main_top2"
                android:layout_gravity="right|center"
                android:layout_marginRight="16dp"
                />
        </FrameLayout>

        <!-- 交易UP主 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:layout_marginTop="5dp"
            android:background="#FFFFFF">
            <ImageView
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="left|center"
                android:src="@drawable/main_hot_head1"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="110dp"
                android:layout_height="fill_parent">
                <TextView
                    android:layout_width="180dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="15dp"
                    android:text="立正 ♂"/>
                <TextView
                    android:layout_width="180dp"
                    android:layout_height="20dp"
                    android:text="湖南大学12级"/>
                <TextView
                    android:layout_width="180dp"
                    android:layout_height="20dp"
                    android:text="视觉传达"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="200dp"
                android:layout_height="fill_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="15dp"
                        android:text="诚信指数"/>
                    <TextView
                        style="@style/MainColor"
                        android:layout_width="180dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="15dp"
                        android:text="98%"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="5dp"
                        android:text="交易数量"/>
                    <TextView
                        style="@style/MainColor"
                        android:layout_width="180dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="5dp"
                        android:text="12"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- 商品介绍 -->
        <FrameLayout
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_marginTop="3dp"
            android:background="#FFFFFF">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="top|right"
                android:src="@drawable/bookmethod2"/>
            <TextView
                android:layout_height="16dp"
                android:layout_width="16dp"
                android:textSize="14dp"
                android:textColor="#FFFFFF"
                android:layout_gravity="top|right"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:text="租"/>
            <TextView
                android:layout_height="22dp"
                android:layout_width="130dp"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:text="工业设计史"/>
            <TextView
                android:layout_height="60dp"
                android:layout_width="330dp"
                android:textSize="12dp"
                android:textColor="#000000"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="16dp"
                android:text="通过学习人类设计历史中，包括各种设计学派、设计风格、著名设计师及其作品的特色以及设计发展的历史条件。"/>
        </FrameLayout>
        <TextView
            android:layout_height="25dp"
            android:layout_width="fill_parent"
            android:textSize="18dp"
            android:textColor="#616161"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:text="其他租购"/>

        <FrameLayout
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_marginTop="3dp"
            android:background="#FFFFFF">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="top|right"
                android:src="@drawable/bookmethod2"/>
            <TextView
                android:layout_height="16dp"
                android:layout_width="16dp"
                android:textSize="14dp"
                android:textColor="#FFFFFF"
                android:layout_gravity="top|right"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:text="租"/>
            <TextView
                android:layout_height="22dp"
                android:layout_width="130dp"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:text="工业设计史"/>
            <TextView
                android:layout_height="60dp"
                android:layout_width="330dp"
                android:textSize="12dp"
                android:textColor="#000000"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="16dp"
                android:text="通过学习人类设计历史中，包括各种设计学派、设计风格、著名设计师及其作品的特色以及设计发展的历史条件。"/>
        </FrameLayout>

        <FrameLayout
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_marginTop="3dp"
            android:background="#FFFFFF">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="top|right"
                android:src="@drawable/bookmethod2"/>
            <TextView
                android:layout_height="16dp"
                android:layout_width="16dp"
                android:textSize="14dp"
                android:textColor="#FFFFFF"
                android:layout_gravity="top|right"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:text="租"/>
            <TextView
                android:layout_height="22dp"
                android:layout_width="130dp"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:text="工业设计史"/>
            <TextView
                android:layout_height="60dp"
                android:layout_width="330dp"
                android:textSize="12dp"
                android:textColor="#000000"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="16dp"
                android:text="通过学习人类设计历史中，包括各种设计学派、设计风格、著名设计师及其作品的特色以及设计发展的历史条件。"/>
        </FrameLayout>

        <!-- 买买买 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginTop="26dp"
            android:background="#FFFFFF">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/main_talk_icon"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="left|center"/>
            <FrameLayout
                android:id="@+id/buybuybuy"
                android:onClick="buybtn_onclick"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:background="#21D7A7">
                <TextView
                    android:id="@+id/main_detail_buy"
                    android:layout_width="40dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:textColor="#FFFFFF"
                    android:text="确认"/>
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>